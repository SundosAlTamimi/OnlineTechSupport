<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bac1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bac_list"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="9"-->
            <!--app:srcCompat="@drawable/ic_person_add_black_24dp_white"-->
            <!--tools:ignore="VectorDrawableCompat" />-->

        <TextView
            android:id="@+id/engName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/darkblue_2"
            android:text="ENG. Eman"
            android:textSize="20sp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/online_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:tint="@color/darkblue_1"
            app:backgroundTint="@color/goldf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.994" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bac2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
       >




        <EditText
            android:id="@+id/online_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_f"
            android:fontFamily="serif"
            android:gravity="start"
            android:hint="@string/system_problem"
            android:inputType="textMultiLine"
            android:minLines="14"
            android:padding="10dp"
            android:textColor="@color/darkblue_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.0"
            />


    </LinearLayout>

</LinearLayout>