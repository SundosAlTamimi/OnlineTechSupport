<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/action_settings"
        android:textColor="@color/darkblue_1"
        android:textSize="30sp"
      />

    <LinearLayout
        android:id="@+id/linearOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/icon_f"
            android:padding="10dp"
            android:tint="@color/darkblue_1"
            app:srcCompat="@drawable/ic_person"
            tools:ignore="VectorDrawableCompat" />

        <EditText
            android:id="@+id/settings_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edit_text_f"
            android:drawablePadding="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="ID"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:nextFocusDown="@id/login_password"
            android:padding="10dp"
            android:textSize="15sp"
          />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="IP"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/darkblue_2"
            android:background="@drawable/icon_f"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/settings_ip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edit_text_f"
            android:drawablePadding="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="IP Address"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:nextFocusDown="@id/login_password"
            android:padding="10dp"
            android:textSize="15sp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/settings_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_f"
        android:fontFamily="serif"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
       />

</LinearLayout>